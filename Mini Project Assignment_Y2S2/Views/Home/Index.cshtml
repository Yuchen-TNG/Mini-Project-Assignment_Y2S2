@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

</head>

<body>
    <div class="parent">
        <div class="left-container">
            <div class="filter-container">
                <h1>Filter</h1>
                <p>Tips:you may click the orange color to do next action </p>
            </div>
            <hr />
            <div class="location">
                <span>Location:  </span>
                <select class="locationInput">
                    <option value="FOCS">FOCS</option>
                    <option value="">East Campus</option>
                </select>
            </div>
            <hr />
            <div class="dateContainer">
                <label for="startDate">Start Date:</label>
                <input type="date" id="startDate">
                <p>↓</p>
                <label for="endDate" >End Date:  </label>
                <input type="date" id="endDate">
            </div>
            <hr />


                <div class="filter-button">
                <button>Filter</button>
                </div>

        </div>


        <div class="middle-line"></div>

        <div class="right-container">
            <div class="right-container-top">

                <div class="typeOfItem">
                    <button id="foundButton">Lost </button>
                    <button class="buttonA">/  </button>
                    <button id="postButton">Found</button>
                </div>
                <hr />
            </div>

            <div class="right-container-bottom">
                <a class="card" asp-action="CardDetails" asp-controller="Home" asp-route-id="1">
                    <img class="card-img" src="img/item/download.jpg" alt="img" />
                    <div class="card-details">
                        <div class="category">
                            <p>Category</p>
                        </div>
                        <div class="details">
                            <p>Lost At:</p>
                            <p>Lost Date:</p>
                        </div>
                    </div>
                </a>

                <div class="paging">
                    <button id="pagingBack">< Back</button>
                    <button class="pagingNumber">1</button>
                    <button id="pagingNext">Next ></button>
                </div>
            </div>
        </div>





    </div>
    <script src="~/js/index.js" asp-append-version="true"> </script>
</body>
