@model Mini_Project_Assignment_Y2S2.Models.Item

<style>
    body {
        background: #f5eaf5;
        font-family: Arial, sans-serif;
    }

    .post-container {
        width: 80%;
        margin: 40px auto;
        background: #f7d596;
        padding: 40px;
        border-radius: 12px;
    }

    .post-title {
        text-align: center;
        font-size: 26px;
        font-weight: bold;
        margin-bottom: 30px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 65% 35%;
        grid-gap: 30px;
    }

    .form-group label {
        font-weight: bold;
        margin-top: 15px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ccc;
        margin-bottom: 10px;
    }

    .image-box {
        width: 100%;
        height: 300px;
        border: 2px dotted black;
        border-radius: 12px;
        padding: 10px;
        background: white;
        overflow-y: auto;
    }

    #previewContainer {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
        gap: 8px;
    }

        #previewContainer img {
            width: 100%;
            height: 80px;
            object-fit: cover;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

    button[type="submit"] {
        margin-top: 20px;
        padding: 10px 25px;
        background: #333;
        color: white;
        border-radius: 8px;
        border: none;
        cursor: pointer;
    }
</style>

<div class="post-container">
    <div class="post-title">POST FOR LOST ITEM</div>

    <form asp-action="CreatePost" asp-controller="Home" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Category" />

        <div class="form-grid">
            <div class="form-group">

                <label asp-for="IName">Item Name</label>
                <input asp-for="IName" class="form-control" />

                <label asp-for="IType">Item Type</label>
                <input asp-for="IType" class="form-control" />

                <label asp-for="Idescription">Item Description</label>
                <textarea asp-for="Idescription" class="form-control" style="height:120px;"></textarea>

                <label>Lost Date</label>
                <input asp-for="Date" type="date" class="form-control" />

                <label>Location</label>
                <select asp-for="LocationID" class="form-control" id="locationSelect">
                    <option value="">Select</option>
                    @if (ViewBag.Locations != null)
                    {
                        foreach (var loc in ViewBag.Locations)
                        {
                            <option value="@loc.LocationID">@loc.LocationName</option>
                        }
                    }
                </select>


                <!-- Other Location textbox -->
                <div id="otherLocationBox" style="display:none; margin-top:10px;">
                    <label>Enter Other Location</label>
                    <input type="text" name="OtherLocation" class="form-control" />
                </div>

                <label>Category</label>
                <input type="text" value="@Model.Category" class="form-control" readonly />

                <button type="submit">Submit</button>
            </div>

            <div>
                <label>Item Images</label>
                <div class="image-box" id="previewContainer">
                    <p style="color:gray;">No Images Selected</p>
                </div>
                <input name="ImageFiles" id="imgInput" type="file" class="form-control" accept="image/*" multiple />
            </div>
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const select = document.getElementById("locationSelect");
        const otherBox = document.getElementById("otherLocationBox");

        function checkOther() {
            const selectedOption = select.options[select.selectedIndex];
            const name = selectedOption.text.trim(); // 取选中 option 的文本，也就是 LocationName
            if (name.toLowerCase() === "other") {
                otherBox.style.display = "block";
            } else {
                otherBox.style.display = "none";
            }
        }

        // 页面加载时检查
        checkOther();

        // 选项改变时检查
        select.addEventListener("change", checkOther);

        // 图片预览
        const imgInput = document.getElementById("imgInput");
        const previewContainer = document.getElementById("previewContainer");

        imgInput.addEventListener("change", function (event) {
            previewContainer.innerHTML = "";
            const files = event.target.files;
            if (files.length === 0) {
                previewContainer.innerHTML = "<p style='color: gray;'>No Images Selected</p>";
                return;
            }
            for (let i = 0; i < files.length; i++) {
                let img = document.createElement("img");
                img.src = URL.createObjectURL(files[i]);
                previewContainer.appendChild(img);
            }
        });
    });


</script>
