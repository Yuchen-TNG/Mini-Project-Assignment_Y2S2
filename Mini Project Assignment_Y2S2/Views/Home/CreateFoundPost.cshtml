
@model Mini_Project_Assignment_Y2S2.Models.Item

<style>
    body {
        background: #f5eaf5;
        font-family: Arial, sans-serif;
    }

    .post-container {
        width: 80%;
        margin: 40px auto;
        background: #f7d596;
        padding: 40px;
        border-radius: 12px;
        box-sizing: border-box;
    }

    .post-title {
        text-align: center;
        font-size: 26px;
        font-weight: bold;
        margin-bottom: 30px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 65% 35%;
        grid-gap: 30px;
        align-items: start;
    }

    .form-group label {
        font-weight: bold;
        margin-top: 15px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ccc;
        margin-bottom: 3px;
        box-sizing: border-box;
    }

    .text-danger {
        color: red;
        font-size: 14px;
        margin-bottom: 8px;
        display: block;
    }

    .image-box {
        width: 100%;
        height: 300px;
        border: 2px dashed #333;
        border-radius: 12px;
        padding: 10px;
        background: white;
        overflow-y: auto;
        box-sizing: border-box;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        transition: background 0.2s, border-color 0.2s;
    }

        .image-box.dragover {
            background: #fff3cd;
            border-color: #ff9800;
        }

    #previewContainer {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
        gap: 8px;
        width: 100%;
    }

        #previewContainer img {
            width: 100%;
            height: 80px;
            object-fit: cover;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

    .remove-btn {
        position: absolute;
        top: -6px;
        right: -6px;
        width: 22px;
        height: 22px;
        border-radius: 50%;
        background: rgba(0,0,0,0.6);
        color: white;
        border: none;
        font-size: 14px;
        line-height: 22px;
        text-align: center;
        cursor: pointer;
        z-index: 2;
    }

        .remove-btn:hover {
            background: rgba(0,0,0,0.85);
        }

    .file-input-wrapper {
        position: relative;
        overflow: hidden;
        display: inline-block;
        margin-top: 10px;
    }

        .file-input-wrapper button {
            border: none;
            color: white;
            background-color: #333;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
        }

        .file-input-wrapper input[type=file] {
            font-size: 100px;
            position: absolute;
            left: 0;
            top: 0;
            opacity: 0;
            cursor: pointer;
        }

    button[type="submit"], #cancelBtn, #clearBtn {
        margin-top: 20px;
        padding: 10px 25px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
    }

    button[type="submit"] {
        background: #333;
        color: white;
    }

    #cancelBtn {
        background: #888;
        margin-left: 10px;
    }

    #clearBtn {
        background: #555;
        margin-left: 10px;
    }

    #otherLocationBox {
        display: none;
        margin-top: 10px;
    }

    .back {
        height: 40px;
        width: 70px;
        font-size: 20px;
        background-color: #FF9500;
        border-radius: 15px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
        color: black;
    }
</style>

<div class="post-container">
    <a class="back" href="@Url.Action("Index", "Home")">Back</a>
    <div class="post-title">POST FOR FOUND ITEM</div>

    <form asp-action="CreatePost" asp-controller="Home" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Category" value="@Model.Category" />

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-grid">
            <!-- LEFT FORM -->
            <div class="form-group">
                <label asp-for="IName">Item Name</label>
                <input asp-for="IName" class="form-control" />
                <span asp-validation-for="IName" class="text-danger"></span>

                <label asp-for="IType">Item Type</label>
                <input asp-for="IType" class="form-control" />
                <span asp-validation-for="IType" class="text-danger"></span>

                <label asp-for="Idescription">Item Description</label>
                <textarea asp-for="Idescription" class="form-control" style="height:120px;"></textarea>
                <span asp-validation-for="Idescription" class="text-danger"></span>

                <label asp-for="Date">Found Date</label>
                <input asp-for="Date" type="date" class="form-control" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Date" class="text-danger"></span>

                <label>Location</label>
                <select asp-for="LocationID" class="form-control" id="locationSelect">
                    <option value="">Select</option>
                    @foreach (var loc in ViewBag.Locations)
                    {
                        <option value="@loc.LocationID">@loc.LocationName</option>
                    }
                </select>
                <span asp-validation-for="LocationID" class="text-danger"></span>

                <div id="otherLocationBox">
                    <label>Enter Other Location</label>
                    <input type="text" name="OtherLocation" class="form-control" />
                </div>

                <label>Found At (Location)</label>
                <input type="text"
                       class="form-control"
                       asp-for="LocationFound" />

                <label>Category</label>
                <input type="text" class="form-control" value="@Model.Category" readonly />

                <button type="submit">Submit</button>
                <button type="button" id="clearBtn">Clear</button>
            </div>

            <!-- RIGHT IMAGES -->
            <div>
                <label>Item Images</label>
                <div class="image-box" id="dropArea">
                    <div id="previewContainer"></div>
                </div>

                <div class="file-input-wrapper">
                    <button type="button">Choose Images</button>
                    <input asp-for="ImageFiles" id="imgInput" type="file" accept="image/*" multiple />
                </div>

                <span asp-validation-for="ImageFiles" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const select = document.getElementById("locationSelect");
            const otherBox = document.getElementById("otherLocationBox");
            const imgInput = document.getElementById("imgInput");
            const dropArea = document.getElementById("dropArea");
            const previewContainer = document.getElementById("previewContainer");
            const cancelBtn = document.getElementById("cancelBtn");
            const clearBtn = document.getElementById("clearBtn");

            let uploadedFiles = [];

            function checkOther() {
                const name = select.options[select.selectedIndex]?.text.toLowerCase();
                otherBox.style.display = (name === "other") ? "block" : "none";
            }
            checkOther();
            select.addEventListener("change", checkOther);

            function syncInputFiles() {
                const dt = new DataTransfer();
                uploadedFiles.forEach(f => dt.items.add(f));
                imgInput.files = dt.files;
            }

            function updatePreview() {
                previewContainer.innerHTML = "";
                if(uploadedFiles.length === 0) return;

                uploadedFiles.forEach((file, index) => {
                    const wrap = document.createElement("div");
                    wrap.style.position = "relative";

                    const img = document.createElement("img");
                    img.src = URL.createObjectURL(file);

                    const btn = document.createElement("button");
                    btn.type = "button";
                    btn.textContent = "×";
                    btn.className = "remove-btn";
                    btn.onclick = () => {
                        uploadedFiles.splice(index, 1);
                        syncInputFiles();
                        updatePreview();
                    };

                    wrap.appendChild(img);
                    wrap.appendChild(btn);
                    previewContainer.appendChild(wrap);
                });
            }

            document.querySelector(".file-input-wrapper button").addEventListener("click", () => imgInput.click());

            imgInput.addEventListener("change", e => {
                uploadedFiles = uploadedFiles.concat(Array.from(e.target.files));
                syncInputFiles();
                updatePreview();
            });

            dropArea.addEventListener("dragover", e => { e.preventDefault(); });
            dropArea.addEventListener("drop", e => {
                e.preventDefault();
                uploadedFiles = uploadedFiles.concat(Array.from(e.dataTransfer.files));
                syncInputFiles();
                updatePreview();
            });


            clearBtn.addEventListener("click", () => {
                document.querySelector("form").reset();
                uploadedFiles = [];
                syncInputFiles();
                updatePreview();
            });
        });
    </script>
}
