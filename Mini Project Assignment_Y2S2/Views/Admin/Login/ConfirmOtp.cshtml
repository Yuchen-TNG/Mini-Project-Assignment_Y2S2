@{
    ViewData["Title"] = "Confirm OTP";
    Layout = "~/Views/Shared/_AdminForgotLayout.cshtml";
}

<div class="bg-white p-8 rounded-xl shadow-md">
    <h2 class="text-2xl font-bold mb-6 text-indigo-600 text-center">Confirm OTP</h2>

    <!-- OTP Verification Form -->
    <form asp-action="ConfirmOtp" method="post" class="space-y-4">
        <div>
            <label class="block text-sm font-medium mb-1" for="otp">Enter OTP</label>
            <input type="text"
                   name="otp"
                   id="otp"
                   placeholder="6-digit OTP"
                   required
                   class="w-full border rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <p class="text-red-500 text-sm">@ViewBag.Error</p>
        }

        @if (!string.IsNullOrEmpty(ViewBag.Success))
        {
            <p class="text-green-500 text-sm">@ViewBag.Success</p>
        }

        <button type="submit"
                class="w-full bg-indigo-600 text-white font-semibold py-2 rounded-md hover:bg-indigo-700 transition">
            Verify OTP
        </button>
    </form>

    <!-- Resend OTP Form -->
    <form asp-action="ResendOtp" method="post" class="text-center mt-3">
        <button type="submit" class="text-indigo-600 hover:underline">
            Resend OTP
        </button>
    </form>

    <div class="text-center mt-4">
        <a href="/Admin/Login" class="text-indigo-600 hover:underline">Back to Login</a>
    </div>
</div>
