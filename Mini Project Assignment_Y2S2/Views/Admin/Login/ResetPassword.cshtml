@model Mini_Project_Assignment_Y2S2.Models.UserViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AdminForgotLayout.cshtml";
}

<div class="bg-white p-8 rounded-xl shadow-md max-w-md mx-auto mt-20">
    <h2 class="text-2xl font-bold mb-6 text-indigo-600 text-center">Reset Password</h2>

    <form asp-action="ResetPassword" method="post" class="space-y-4">
        <div>
            <label asp-for="NewPassword" class="block text-sm font-medium mb-1"></label>
            <input asp-for="NewPassword"
                   type="password"
                   class="w-full border rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="block text-sm font-medium mb-1"></label>
            <input asp-for="ConfirmPassword"
                   type="password"
                   class="w-full border rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <p class="text-red-500 text-sm">@ViewBag.Error</p>
        }

        <button type="submit"
                class="w-full bg-indigo-600 text-white font-semibold py-2 rounded-md hover:bg-indigo-700 transition">
            Reset Password
        </button>
    </form>

    <div class="text-center mt-4">
        <a asp-action="Login" class="text-indigo-600 hover:underline">Back to Login</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
