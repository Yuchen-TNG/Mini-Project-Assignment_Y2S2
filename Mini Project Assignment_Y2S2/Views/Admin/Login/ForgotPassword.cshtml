@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_AdminForgotLayout.cshtml";
}

<div class="bg-white p-8 rounded-xl shadow-md">
    <h2 class="text-2xl font-bold mb-6 text-indigo-600 text-center">Forgot Password</h2>

    <form method="post" asp-controller="Admin" asp-action="ForgotPassword" class="space-y-4">
        <div>
            <label class="block text-sm font-medium mb-1">Enter Email:</label>
            <input type="email" name="email" required
                   class="w-full border rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
        </div>

        <button type="submit"
                class="w-full bg-indigo-600 text-white font-semibold py-2 rounded-md hover:bg-indigo-700 transition">
            Send Password
        </button>

        <div class="text-center mt-4">
            <a href="/Admin/Login" class="text-indigo-600 hover:underline">Back to Login</a>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <p class="text-red-500 text-sm mt-2">@ViewBag.Error</p>
        }
        @if (!string.IsNullOrEmpty(ViewBag.Success))
        {
            <p class="text-green-500 text-sm mt-2">@ViewBag.Success</p>
        }
    </form>
</div>
