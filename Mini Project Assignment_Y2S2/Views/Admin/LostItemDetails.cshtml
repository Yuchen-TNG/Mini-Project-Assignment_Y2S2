@{
    ViewData["Title"] = "Item Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Mini_Project_Assignment_Y2S2.Models.Item

<h2 class="text-2xl font-bold text-indigo-700 mb-6">
    Item Details
    <span class="ml-3 px-3 py-1 text-sm rounded-full
        @(Model.Category == "LOSTITEM"
                                ? "bg-green-100 text-green-700"
                                : "bg-red-100 text-red-700")">
        @Model.Category
    </span>
</h2>

<div class="bg-white shadow-md rounded-lg p-6">

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
        <p><strong>ID:</strong> @Model.ItemID</p>
        <p><strong>Name:</strong> @Model.IName</p>
        <p><strong>Type:</strong> @Model.IType</p>
        <p><strong>Location:</strong> @Model.LocationName</p>
        <p>
            <strong>Date:</strong>
            @(Model.Date == DateTime.MinValue ? "N/A" : Model.Date.ToString("yyyy-MM-dd"))
        </p>
        <p><strong>Status:</strong> @Model.IStatus</p>
    </div>

    <hr class="my-4" />

    <p>
        <strong>Description:</strong><br />
        @(!string.IsNullOrEmpty(Model.Idescription) ? Model.Idescription : "No description provided.")
    </p>

    @if (Model.Images != null && Model.Images.Any())
    {
        <h3 class="mt-6 font-semibold">Images</h3>
        <div class="flex flex-wrap gap-3 mt-3">
            @foreach (var img in Model.Images)
            {
                <img src="@img"
                     class="w-32 h-32 object-cover rounded border shadow-sm hover:scale-105 transition" />
            }
        </div>
    }

    <div class="mt-4">
        <a asp-action="LostItem" class="inline-block text-indigo-600 hover:underline">Back to List</a>
    </div>
</div>
