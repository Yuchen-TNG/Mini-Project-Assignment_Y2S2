<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LostAndFoundAdmin</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome + Google Fonts -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/admin-function-style.css" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        /* Sidebar */
        .sidebar-link {
            transition: background 0.25s, padding-left 0.2s;
        }

            .sidebar-link:hover {
                background: #f7f7f7;
                padding-left: 1.8rem;
            }

        .sidebar-dropdown {
            display: none;
            overflow: hidden;
            max-height: 0;
            transition: max-height 0.3s ease;
        }

            .sidebar-dropdown.show {
                display: block;
                max-height: 500px;
            }

        /* Collapsed Sidebar */
        .sidebar-collapsed {
            width: 4rem !important;
        }

            .sidebar-collapsed .sidebar-text {
                display: none;
            }

            .sidebar-collapsed .sidebar-dropdown {
                display: none !important;
            }

        .sidebar-toggle-btn {
            cursor: pointer;
            transition: transform 0.3s;
        }

        .sidebar-collapsed .sidebar-toggle-btn i {
            transform: rotate(180deg);
        }

        .rotate-180 {
            transform: rotate(180deg);
            transition: transform 0.3s;
        }
    </style>
</head>
<body class="bg-gray-100 text-gray-800">

    <div class="flex h-screen flex-col">

        <!-- TOP NAVBAR -->
        <header class="h-16 border-b flex items-center justify-between px-6 bg-white shadow-sm z-20">
            <div class="text-2xl font-extrabold uppercase tracking-wider text-indigo-600">
                LOST & FOUND ADMIN
            </div>

            <div class="flex items-center gap-6">

                <div class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center text-indigo-600 shadow-sm">
                    <i class="far fa-user"></i>
                </div>

                <a href="/Admin/Login"
                    <i class="fas fa-sign-out-alt text-xl text-gray-700 hover:text-red-500 transition"></i>
                </a>
            </div>
        </header>

        <div class="flex flex-1 overflow-hidden">

            <!-- SIDEBAR -->
            <aside id="sidebar" class="w-64 border-r bg-white flex flex-col shadow-md relative transition-all duration-300 ease-in-out">

                <!-- Collapse Button -->
                <div class="absolute top-4 right-[-16px] w-8 h-8 bg-indigo-600 text-white rounded-full flex items-center justify-center sidebar-toggle-btn"
                     onclick="toggleSidebar()">
                    <i class="fas fa-angle-left"></i>
                </div>

                <div class="p-5 border-b flex items-center justify-between font-bold text-sm tracking-wide bg-gray-50">
                    <div class="flex items-center gap-2 text-indigo-600">
                        <span class="sidebar-text transition-opacity duration-300">ADMIN SIDEBAR</span>
                        <i class="far fa-user-circle"></i>
                    </div>
                </div>

                <nav class="flex-1 overflow-y-auto">

                    <!-- Dashboard -->
                    <a href="/Admin/Dashboard"
                       class="sidebar-link block px-6 py-4 border-b flex items-center gap-2 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "bg-gray-100 font-semibold text-indigo-600" : "")">
                        <i class="fas fa-chart-line"></i>
                        <span class="sidebar-text">Dashboard</span>
                    </a>

                    <!-- User Management -->
                    <a href="/Admin/UserManagement"
                       class="sidebar-link block px-6 py-4 border-b flex items-center gap-2 @(ViewContext.RouteData.Values["Action"]?.ToString() == "UserManagement" ? "bg-gray-100 font-semibold text-indigo-600" : "")">
                        <i class="fas fa-users"></i>
                        <span class="sidebar-text">User Management</span>
                    </a>

                    <!-- Item Management Dropdown -->
                    <div class="border-b">
                        <div onclick="toggleDropdown(this)"
                             class="px-6 py-4 hover:bg-gray-50 cursor-pointer flex justify-between items-center">
                            <span class="flex items-center gap-2">
                                <i class="fas fa-box-open"></i> <span class="sidebar-text">Item Management</span>
                            </span>
                            <i class="fas fa-caret-down text-xs"></i>
                        </div>

                        <div class="sidebar-dropdown bg-gray-50 text-sm">
                            <a href="/Admin/LostItem"
                               class="sidebar-link block pl-10 pr-6 py-3 border-t @(ViewContext.RouteData.Values["Action"]?.ToString() == "LostItem" ? "bg-gray-100 font-semibold text-indigo-600" : "")">
                                <span class="sidebar-text">Lost Items</span>
                            </a>
                            <a href="/Admin/FoundItem"
                               class="sidebar-link block pl-10 pr-6 py-3 border-t @(ViewContext.RouteData.Values["Action"]?.ToString() == "FoundItem" ? "bg-gray-100 font-semibold text-indigo-600" : "")">
                                <span class="sidebar-text">Found Items</span>
                            </a>
                        </div>
                    </div>

                    <!-- Post Management -->
                    <a href="/Admin/PostManagement"
                       class="sidebar-link block px-6 py-4 border-b flex items-center gap-2 @(ViewContext.RouteData.Values["Action"]?.ToString() == "PostManagement" ? "bg-gray-100 font-semibold text-indigo-600" : "")">
                        <i class="fas fa-edit"></i>
                        <span class="sidebar-text">Post Management</span>
                    </a>

                    <!-- History -->
                    <a href="/Admin/History"
                       class="sidebar-link block px-6 py-4 border-b flex items-center gap-2 @(ViewContext.RouteData.Values["Action"]?.ToString() == "History" ? "bg-gray-100 font-semibold text-indigo-600" : "")">
                        <i class="fas fa-history"></i>
                        <span class="sidebar-text">History (Item)</span>
                    </a>

                </nav>
            </aside>

            <!-- MAIN CONTENT -->
            <main class="flex-1 bg-gray-50 p-8 overflow-y-auto">
                <div class="bg-white shadow-md rounded-xl p-6">
                    @RenderBody()
                </div>
            </main>

        </div>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('sidebar-collapsed');

            // Rotate toggle icon
            const icon = sidebar.querySelector('.sidebar-toggle-btn i');
            icon.classList.toggle('rotate-180');
        }

        function toggleDropdown(element) {
            const dropdown = element.nextElementSibling;
            dropdown.classList.toggle('show');

            if(dropdown.classList.contains('show')){
                dropdown.style.maxHeight = dropdown.scrollHeight + "px";
            } else {
                dropdown.style.maxHeight = "0";
            }

            const caret = element.querySelector('.fa-caret-down');
            caret.classList.toggle('rotate-180');
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
