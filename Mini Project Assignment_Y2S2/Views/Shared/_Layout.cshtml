<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mini_Project_Assignment_Y2S2</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>

</head>

<body>
    <nav class="top-nav">
        <div class="top-left">
            <ul>
                <li><a href="@Url.Action("Index","Home")">Index</a></li>
            </ul>
        </div>

        <div class="top-right">
            <ul>
                <li><a href="@Url.Action("CreatePost", "Home")">Post</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle">Profile ▼</a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("MyAccount", "User")">Account</a></li>
                        <li><a href="@Url.Action("MyPosts", "User")">My Post</a></li>
                    </ul>
                </li>
                <li>
                    <a href="@Url.Action("Login", "User")">Login</a>
                </li>
            </ul>
        </div>
    </nav>




    @RenderBody()

    @RenderSection("Scripts", required: false)



    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toggle = document.querySelector(".dropdown-toggle");
            const menu = document.querySelector(".dropdown-menu");

            toggle.addEventListener("click", function (e) {
                e.preventDefault(); // prevent default link behavior
                menu.classList.toggle("show");
            });

            // Optional: hide dropdown if clicking outside
            document.addEventListener("click", function (e) {
                if (!toggle.contains(e.target) && !menu.contains(e.target)) {
                    menu.classList.remove("show");
                }
            });
        });
    </script>
</body>


</html>
