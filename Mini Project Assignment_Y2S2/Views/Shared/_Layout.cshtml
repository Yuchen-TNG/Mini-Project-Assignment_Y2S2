@inject IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mini_Project_Assignment_Y2S2</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- 第一步：加载jQuery库（必须放在最前面） -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- 第二步：加载验证插件（如果你有这些文件的话） -->
    <!-- 如果你的项目有这些文件，取消注释下面三行 -->
    <!--
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    -->
    <!-- 如果你没有上面的本地文件，使用CDN版本 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>
    <nav class="top-nav">
        <div class="top-left">
            <ul>
                <li><a id="index" href="@Url.Action("Index", "Home")">Index</a></li>
            </ul>
        </div>

        <div class="top-right">
            <ul>
                <li><a href="@Url.Action("ChoosePostType", "Home")">Post</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle">Profile ▼</a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("MyAccount", "User")">Account</a></li>
                        <li><a href="@Url.Action("MyPost", "User")">My Post</a></li>
                    </ul>
                </li>
                <li>
                    @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("UserId")))
                    {
                        <a href="@Url.Action("Logout", "User")">Logout</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "User")">Login</a>
                    }
                </li>
            </ul>
        </div>
    </nav>

    @RenderBody()

    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toggle = document.querySelector(".dropdown-toggle");
            const menu = document.querySelector(".dropdown-menu");

            toggle.addEventListener("click", function (e) {
                e.preventDefault();
                menu.classList.toggle("show");
            });

            document.addEventListener("click", function (e) {
                if (!toggle.contains(e.target) && !menu.contains(e.target)) {
                    menu.classList.remove("show");
                }
            });
        });
    </script>
</body>
</html>