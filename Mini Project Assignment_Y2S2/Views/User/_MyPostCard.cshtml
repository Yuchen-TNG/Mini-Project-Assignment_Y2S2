@model List<ItemCardViewModel>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <a class="card"
           asp-action="MyPostDetails"
           asp-controller="User"
           asp-route-itemId="@item.ItemID">

            <div class="card-img-container">
                <img class="card-img"
                     src="@(item.Images != null && item.Images.Any() ? item.Images[0] : "/images/default.png")"
                     onerror="this.onerror=null; this.src='/images/default.png';"
                     style="width:100%; height:150px; object-fit:cover;" />
            </div>

            <div class="card-details">
                <div class="category">
                    <p>@item.IType</p>
                </div>

                <div class="details">
                    <p>@item.LocationName</p>
                    <p>@item.Date.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </a>
    }
}
else
{
    <p class="not_available">You have not posted any items yet.</p>
}
