@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}
<link rel="stylesheet" href="~/css/user.css" asp-append-version="true" />

<div class="container">
    <div class="login-card">
        <div class="login-title">Change Password</div>

        <form method="post" asp-action="ChangePassword">
            <label>New Password</label>
            <input asp-for="NewPassword" type="password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>

            <label>Confirm New Password</label>
            <input asp-for="ConfirmPassword" type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            @if (ViewBag.Error != null)
            {
                <div class="error-message">@ViewBag.Error</div>
            }

            <button type="submit" class="btn-login">Update Password</button>

        </form>
    </div>
</div>
